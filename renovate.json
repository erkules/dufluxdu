{
  "branchPrefix": "renovate/",
  "separateMultipleMajor": false,
  "groupName": "all-dependencies",
  "groupSlug": "all",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "flux",
    "kustomize",
    "helmv3"
  ],
  "flux": {
    "fileMatch": [
      "base/.*\\.yaml$",
      ".*-release\\.yaml",
      ".*-repo\\.yaml",
      "^[^/]+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "kube-prometheus-stack"
      ],
      "enabled": false
    }
  ]
}
